---
import Page from "../layouts/page.astro";
import Work from "../components/work.svelte";
---

<Page>
  <main class="sm:ml-44 lg:ml-[30%] ml-2 mt-12 px-8">
    <Work client:load />
    <div class="relative mt-24">

    
    <span
      class="text-light-blue-100 relative font-goldman font-bold text-left text-2xl"
      >&lt;Studies /&gt;
    </span>
    <div class="flex sm:flex-row flex-col w-fit pt-8">
        <div class="flex sm:flex-col flex-row sm:border-0 border-b-2 pb-2 sm:w-1/2 w-full">
            <img src="/school.svg" alt="" class="sm:w-[100px] sm:h-[100px] w-[75px] h-[75px] my-auto text-center mx-auto">
            <div class="flex flex-col sm:ml-0 ml-8">
                <span class="text-light-blue-100 font-goldman text-xl text-center">CFGS Web Application Development</span>
                <span class="font-gruppo text-gray-100 text-lg text-center">INS Vidal i Barraquer</span>
                <span class="font-gruppo text-gray-100 text-lg text-center">2022 - 2024</span>
            </div>
        </div>
        <div class="flex sm:flex-col flex-row sm:border-0 border-b-2 pb-2 sm:ml-24 sm:w-1/2 w-full">
            <img src="/school.svg" alt="" class="sm:w-[100px] sm:h-[100px] w-[75px] h-[75px] my-auto text-center sm:mx-auto">
            <div class="flex flex-col mx-auto">
                <span class="text-light-blue-100 font-goldman text-xl text-center">Degree in Physics</span>
                <span class="font-gruppo text-gray-100 text-lg text-center">Universidad Complutense</span>
                <span class="font-gruppo text-gray-100 text-lg text-center">2014 - 2017</span>
            </div>
        </div>
    </div>
</div>
  </main>
</Page>
